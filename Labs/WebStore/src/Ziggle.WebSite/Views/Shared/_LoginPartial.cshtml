@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json

@*If the "User" string is not null, then the user is signed in*@
@if (Context.Session.GetString("User") != null)
{
    <form asp-action="Logoff" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                @{
                    var user = JsonConvert.DeserializeObject<UserModel>(Context.Session.GetString("User"));
                }
                <a asp-action="manage" title="Manage">Hello @user.Name !</a>
            </li>
            <li>
                <a asp-action="shoppingcart" title="Shopping Cart">
                    <img src="~/images/aspnet-mvc-webstore-shopping-cart-image.png" />
                </a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">

        <li><a asp-action="register">Register</a></li>
        <li>Hey</li>
        <li><a asp-action="login">Login</a></li>
    </ul>
}